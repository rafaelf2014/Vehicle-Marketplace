@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar Palavra-passe";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center min-vh-50">
        <div class="col-12 col-md-6 col-lg-4">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <div class="card-header bg-danger text-white text-center py-4">
                    <h1 class="fw-bold mb-0">CliCar</h1>
                    <p class="mb-0 opacity-75 small">Recuperação de Conta</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <h4 class="text-center mb-4 fw-bold">Esqueceu-se da senha?</h4>
                    <p class="text-muted text-center small mb-4">Insira o seu e-mail abaixo. Enviaremos um link para definir uma nova palavra-passe.</p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">E-mail registado</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-danger shadow fw-bold py-3">ENVIAR LINK</button>
                    </form>

                    <div class="text-center mt-4 pt-3 border-top">
                        <a asp-page="./Login" class="text-danger fw-bold text-decoration-none small">Voltar ao Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
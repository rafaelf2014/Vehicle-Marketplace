@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Palavra-passe";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center min-vh-50">
        <div class="col-12 col-md-6 col-lg-4">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h1 class="fw-bold mb-0">CliCar</h1>
                    <p class="mb-0 opacity-75 small">Nova Palavra-passe</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>
                        <input type="hidden" asp-for="Input.Code" />

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control shadow-sm" readonly placeholder="nome@exemplo.com" />
                            <label asp-for="Input.Email">E-mail da Conta</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                            <label asp-for="Input.Password">Nova Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                            <label asp-for="Input.ConfirmPassword">Confirmar Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-danger shadow fw-bold py-3">ALTERAR SENHA</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
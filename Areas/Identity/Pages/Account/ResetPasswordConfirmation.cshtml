@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Redefinida";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center min-vh-50">
        <div class="col-12 col-md-6 col-lg-4 text-center">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <div class="card-header bg-danger text-white py-4">
                    <h1 class="fw-bold mb-0">CliCar</h1>
                    <p class="mb-0 opacity-75 small">Sucesso</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-check" style="font-size: 3.5rem; color: #198754;"></i>
                    </div>

                    <h4 class="fw-bold mb-3">Password Alterada!</h4>

                    <p class="text-muted mb-4">
                        A tua palavra-passe foi redefinida com sucesso. Já podes entrar na tua conta com as novas credenciais.
                    </p>

                    <a asp-page="./Login" class="btn btn-danger btn-lg w-100 shadow fw-bold py-3 mb-3">
                        ENTRAR AGORA
                    </a>

                    <p class="text-muted small">
                        Serás redirecionado para o login em <span id="countdown" class="fw-bold text-danger">5</span> segundos...
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let seconds = 5;
        const display = document.getElementById('countdown');

        const timer = setInterval(() => {
            seconds--;
            if (display) display.textContent = seconds;

            if (seconds <= 0) {
                clearInterval(timer);
                window.location.href = './Login'; // Redireciona para a página de Login
            }
        }, 1000);
    </script>
}
@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "E-mail Enviado";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center min-vh-50">
        <div class="col-12 col-md-6 col-lg-4 text-center">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white py-4">
                    <h1 class="fw-bold mb-0">CliCar</h1>
                    <p class="mb-0 opacity-75 small">Verificação de E-mail</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check-fill" style="font-size: 3.5rem; color: #dc3545;"></i>
                    </div>

                    <h4 class="fw-bold mb-3">Verifica a tua caixa de entrada</h4>

                    <p class="text-muted mb-4">
                        Enviámos um link de recuperação para o teu e-mail. Por favor, verifica também a pasta de <strong>Spam</strong>.
                    </p>

                    <div class="alert alert-info small border-0 bg-light">
                        Podes fechar esta janela ou aguardar o redirecionamento.
                    </div>

                    <p class="text-muted small mt-3">
                        A voltar ao início em <span id="countdown" class="fw-bold text-danger">5</span> segundos...
                    </p>

                    <a href="/" class="btn btn-outline-secondary w-100 mt-2">Ir para o Início agora</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let seconds = 5;
        const display = document.getElementById('countdown');
        const timer = setInterval(() => {
            seconds--;
            if (display) display.textContent = seconds;
            if (seconds <= 0) {
                clearInterval(timer);
                window.location.href = '/';
            }
        }, 1000);
    </script>
}
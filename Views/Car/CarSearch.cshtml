@{
    ViewData["Title"] = "CarSearch";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- 🔹 Secção de filtros -->
        <aside class="col-md-3 bg-light p-3 rounded shadow-sm">
            <h4>Filtrar pesquisa</h4>
            <form>
                <div class="mb-3">
                    <label for="searchBox" class="form-label">Pesquisar veículo</label>
                    <input type="text" class="form-control" id="searchBox" placeholder="Ex: BMW, Toyota...">
                </div>

                <div class="mb-3">
                    <label for="brandSelect" class="form-label">Marca</label>
                    <select id="brandSelect" class="form-select">
                        <option value="">Todas</option>
                        <option value="Toyota">Toyota</option>
                        <option value="BMW">BMW</option>
                        <option value="Audi">Audi</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="priceRange" class="form-label">Faixa de preço</label>
                    <select id="priceRange" class="form-select">
                        <option value="">Qualquer</option>
                        <option value="1">Até 10.000 €</option>
                        <option value="2">10.000 € – 30.000 €</option>
                        <option value="3">Acima de 30.000 €</option>
                    </select>
                </div>

                <button type="button" class="btn btn-primary w-100">Aplicar filtros</button>
            </form>
        </aside>

        <!-- 🔹 Secção dos anúncios -->
        <main class="col-md-9">
            <h3 class="mb-3">Anúncios disponíveis</h3>

            <!-- Barra de pesquisa global -->
            <div class="input-group mb-4">
                <input type="text" class="form-control" placeholder="Procurar um veículo...">
                <button class="btn btn-outline-primary" type="button">Pesquisar</button>
            </div>

            <!-- Cards de exemplo -->
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Carro">
                        <div class="card-body">
                            <h5 class="card-title">Toyota Corolla 2020</h5>
                            <p class="card-text text-muted">15.000 €</p>
                            <a href="#" class="btn btn-outline-primary w-100">Ver detalhes</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Carro">
                        <div class="card-body">
                            <h5 class="card-title">BMW 320i 2021</h5>
                            <p class="card-text text-muted">30.000 €</p>
                            <a href="#" class="btn btn-outline-primary w-100">Ver detalhes</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Carro">
                        <div class="card-body">
                            <h5 class="card-title">Audi A4 2022</h5>
                            <p class="card-text text-muted">28.000 €</p>
                            <a href="#" class="btn btn-outline-primary w-100">Ver detalhes</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

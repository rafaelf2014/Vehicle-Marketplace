@{
    ViewData["Title"] = "Carros";
}

<style>
    /* Estilos locais para aproximar do design solicitado */
    .filter-btn {
        width: 100%;
        text-align: left;
        background: #d6d0ce;
        border: none;
        padding: 12px 16px;
        margin-bottom: 12px;
        border-radius: 8px;
        color: #333;
    }

    .filter-aside {
        max-width: 280px;
    }

    .card-placeholder-img {
        height: 140px;
        background: linear-gradient(90deg, #efefef, #e6e6e6);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #888;
        font-weight: 600;
        border-top-left-radius: .5rem;
        border-top-right-radius: .5rem;
    }

    .badge-status {
        font-size: 0.75rem;
        padding: 4px 8px;
        border-radius: 12px;
    }

    .controls-top {
        display: flex;
        gap: 12px;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 16px;
    }

    .pagination-dots {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .pagination-dots span {
        width: 8px;
        height: 8px;
        background: #ccc;
        border-radius: 50%;
        display: inline-block;
    }

    .pagination-dots .active {
        background: #222;
    }

    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Coluna de filtros (APENAS VISUAL) -->
        <aside class="col-lg-3 filter-aside">
            <h4 class="mb-3">Filtrar pesquisa</h4>

            <div class="d-grid">
                <button class="filter-btn" type="button">Marca</button>
                <button class="filter-btn" type="button">Modelo</button>
                <button class="filter-btn" type="button">Categoria</button>
                <button class="filter-btn" type="button">Combustível</button>
                <button class="filter-btn" type="button">Caixa</button>
                <div class="d-flex gap-2">
                    <button class="filter-btn" style="flex:1" type="button">Preço de</button>
                    <button class="filter-btn" style="flex:1" type="button">Preço até</button>
                </div>
                <div class="d-flex gap-2">
                    <button class="filter-btn" style="flex:1" type="button">Ano de</button>
                    <button class="filter-btn" style="flex:1" type="button">Ano até</button>
                </div>
                <div class="d-flex gap-2">
                    <button class="filter-btn" style="flex:1" type="button">Km de</button>
                    <button class="filter-btn" style="flex:1" type="button">Km até</button>
                </div>
                <button class="filter-btn" type="button">Localização</button>
                <button class="btn btn-secondary mt-2" type="button">Limpar filtros</button>
            </div>
        </aside>

        <!-- Secção anúncios -->
        <main class="col-lg-9">
            <div class="d-flex align-items-start justify-content-between mb-3">
                <div>
                    <h2 class="mb-1">Carros</h2>
                    <small class="text-muted">Número de anúncios: 172</small>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <div class="me-2">
                        <select class="form-select">
                            <option>Destacado</option>
                        </select>
                    </div>
                    <button class="btn btn-danger">Guardar Filtros</button>
                </div>
            </div>

            <div class="controls-top">
                <ul class="nav nav-tabs mb-0">
                    <li class="nav-item"><a class="nav-link active" href="#">Todos (172)</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Usados (132)</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Novos (40)</a></li>
                </ul>

                <div class="d-flex align-items-center gap-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Procurar...">
                        <button class="btn btn-outline-primary" type="button">Pesquisar</button>
                    </div>
                </div>
            </div>

 

            <!-- Paginação visual (dots + seta) -->
            <div class="d-flex align-items-center justify-content-between mt-4">
                <div class="pagination-dots">
                    <span class="active"></span>
                    <span></span>
                    <span></span>
                </div>

                <div>
                    <button class="btn btn-link">Próximo →</button>
                </div>
            </div>
        </main>
    </div>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CliCarProject</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CliCarProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="shadow-sm" style="background: #ffffff;">
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold fs-3">
                    <img src="@Url.Content("~/images/Logo.png")" alt="Logo" class="logo-img" />
                </a>

                <!-- MOBILE BUTTON -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- LINKS -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">

                        <li class="nav-item px-2">
                            <a class="nav-link" href="/">Home</a>
                        </li>

                        <li class="nav-item px-2">
                            <a class="nav-link" href="/Veiculos">Carros</a>
                        </li>

                        <li class="nav-item px-2">
                            <a class="nav-link" href="/Favoritos">Favoritos</a>
                        </li>

                        <li class="nav-item px-2">
                            <a class="nav-link" href="/Comunidade">Comunidade</a>
                        </li>

                    </ul>

                    <!-- AÇÕES DIREITA -->
                    <div class="d-flex align-items-center">

                        <!-- BOTÃO CRIAR ANÚNCIO -->
                        <a href="/Anuncios/Create" class="btn btn-danger me-3 px-3">
                            + Criar Anúncio
                        </a>

                        <!-- LOGIN / PERFIL -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a class="btn btn-outline-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/Identity/Account/Manage">Perfil</a></li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                            <button class="dropdown-item text-danger">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-dark me-2" href="/Identity/Account/Login">Login</a>
                            <a class="btn btn-danger" href="/Identity/Account/Register">Criar Conta</a>
                        }
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CliCarProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

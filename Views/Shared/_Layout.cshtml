@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CliCar</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-red: #c41e3a;
            --dark-bg: #1a1a1a;
            --font-main: 'Inter', sans-serif;
        }

        body {
            font-family: var(--font-main);
            color: #333;
        }

        /* Navbar */
        .main-nav {
            height: 75px;
            z-index: 1060;
        }

        .brand-text {
            font-weight: 800;
            font-size: 1.4rem;
            letter-spacing: -1px;
            color: var(--primary-red);
        }

        .navbar-nav .nav-link {
            font-size: 0.9rem;
            font-weight: 600;
            color: #666 !important;
            padding: 0.5rem 1rem;
            border-bottom: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link.active {
            color: var(--primary-red) !important;
            border-bottom-color: var(--primary-red);
        }

        /* Dropdown de Perfil */
        .dropdown-menu {
            border-radius: 12px;
            padding: 10px;
			z-index: 1070;
        }

        .dropdown-item {
            border-radius: 8px;
            font-weight: 500;
        }

        .profile-trigger {
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .profile-trigger:hover {
            background: #f8f9fa;
            transform: scale(1.05);
        }

        /* Botões Modernos */
        .rounded-pill {
            font-weight: 600;
        }

        /* Centralização absoluta do menu em desktop (preserva comportamento mobile) */
        @@media (min-width: 992px) {
            /* container como referência para absolute */
            .main-nav .container {
                position: relative;
                display: block; /* mantém fluxo normal para mobile; usamos absolute apenas para elementos definidos abaixo */
                min-height: 75px;
                z-index: 1060;  
            }

            /* Marca (esquerda) */
            .main-nav .navbar-brand {
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                z-index: 3;
                display: flex;
                align-items: center;
            }

            /* área de ações (direita) */
            .main-nav > .container .d-flex.align-items-center.gap-3 {
                position: absolute;
                right: 0;
                top: 50%;
                transform: translateY(-50%);
                z-index: 3;
                display: flex;
                align-items: center;
                gap: .75rem;
            }

            /* ul centralizado com position:absolute dentro do container */
            .main-nav .navbar-nav {
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
                display: flex;
                gap: .25rem;
                z-index: 2;
                margin: 0; /* remover margens remanescentes */
            }

            /* evita que o menu absoluto quebre linha */
            .main-nav .navbar-nav .nav-item {
                white-space: nowrap;
            }

            /* assegura que o collapse em desktop não altere layout quando aberto (mantém compatibilidade) */
            .main-nav .navbar-collapse {
                position: static;
            }
        }
    </style>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom main-nav">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <span class="brand-text">CLICAR</span>
                    <img src="~/images/Logotipo.png" alt="CliCar" class="logo-img me-2" style="height: 70px;" />
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    @{
                        var path = Context.Request.Path.Value?.ToLowerInvariant() ?? "/";
                        var isHome = path == "/" || path.StartsWith("/home");
                        var isMeusAnuncios = path.StartsWith("/anuncios") && !path.StartsWith("/anuncios/favoritos");
                        var isFavoritos = path.StartsWith("/anuncios/favoritos") || path.StartsWith("/favoritos");
                        var isAdminPanel = path.StartsWith("/admin");
                    }

                    <ul class="navbar-nav mx-auto text-uppercase">
                        <li class="nav-item">
                            <a class="nav-link @(isHome ? "active" : "")" href="/">Home</a>
                        </li>

                        @if (User.IsInRole("Vendedor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(isMeusAnuncios ? "active" : "")" href="/Anuncios">Meus Anúncios</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                @* Força geração de URL para o Controller (evita ambiguidade com Razor Pages) *@
                                <a class="nav-link text-danger fw-bold @(isAdminPanel ? "active" : "")" href='@Url.Action("Index","Admin")'>Painel de Controlo</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link @(isFavoritos ? "active" : "")" href="/Anuncios/Favoritos">Favoritos</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        @if (User.IsInRole("Vendedor"))
                        {
                            <a href="/Anuncios/Create" class="btn btn-danger btn-sm rounded-pill px-3 shadow-sm d-none d-md-flex align-items-center gap-2">
                                <i class="bi bi-plus-lg"></i> Criar Anúncio
                            </a>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn btn-light rounded-circle p-2 profile-trigger shadow-sm" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle fs-4"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg mt-2">
                                    <li class="px-3 py-2 border-bottom mb-2 bg-light">
                                        <small class="text-muted d-block">Logado como</small>
                                        <span class="fw-bold">@User.Identity.Name</span>
                                    </li>
                                    <li><a class="dropdown-item py-2" href="/User/UserProfile"><i class="bi bi-gear me-2"></i> Perfil</a></li>
									@if (User.IsInRole("Comprador"))
									{
                                        <li>
                                            <a class="dropdown-item py-2 text-dark" href="@Url.Action("MinhasReservas", "Anuncios")">
                                                <i class="bi bi-calendar2-check me-2"></i> Minhas Reservas
                                            </a>
                                        </li>
									}
                                    @if (User.IsInRole("Vendedor") || User.IsInRole("Comprador"))
                                    {
                                        <li><a class="dropdown-item py-2 text-primary" href="/Veiculos"><i class="bi bi-car-front-fill me-2"></i> Minha Garagem</a></li>
                                    }

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                            <button class="dropdown-item py-2 text-danger d-flex align-items-center gap-2 w-100">
                                                <i class="bi bi-box-arrow-right"></i> Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="auth-buttons d-flex gap-2">
                                <a class="btn btn-link text-dark text-decoration-none fw-semibold" href="/Identity/Account/Login">Login</a>
                                <a class="btn btn-outline-danger rounded-pill px-4" href="/Identity/Account/Register">Registar</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/ajax/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model CliCarProject.Models.Classes.Anuncio

@{
    ViewData["Title"] = "Criar Anúncio";
}

<h1 class="mb-4">Criar Anúncio</h1>

<div class="row">
    <div class="col-md-6">

        <a href="javascript:history.back()" class="btn btn-secondary mb-3">← Voltar</a>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Select Vehicle -->
            <div class="form-group mb-3">
                <label asp-for="IdVeiculo" class="form-label"></label>
                <select asp-for="IdVeiculo" class="form-select" asp-items="ViewBag.IdVeiculo"></select>
                <span asp-validation-for="IdVeiculo" class="text-danger"></span>
            </div>

            <!-- Title -->
            <div class="form-group mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group mb-3">
                <label asp-for="Preco" class="form-label"></label>
                <input asp-for="Preco" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <!-- Location -->
            <div class="form-group mb-3">
                <label asp-for="IdLocalizacao" class="form-label"></label>
                <select asp-for="IdLocalizacao" class="form-select" asp-items="ViewBag.IdLocalizacao"></select>
                <span asp-validation-for="IdLocalizacao" class="text-danger"></span>
            </div>

            <!-- Button -->
            <button type="submit" class="btn btn-primary mt-3">
                Criar Anúncio
            </button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

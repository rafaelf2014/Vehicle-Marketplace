    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- SEÇÃO: Informações do veículo -->
                <h5 class="fw-bold mb-3">Escolher Veículo</h5>
                <div class="mb-4">
                    <label asp-for="IdVeiculo" class="form-label fw-semibold"></label>
                    <select asp-for="IdVeiculo" class="form-select" asp-items="ViewBag.IdVeiculo">
                        <option value="">-- Selecione um veículo --</option>
                    </select>
                    <span asp-validation-for="IdVeiculo" class="text-danger"></span>
                </div>

                <hr class="my-4" />

                <!-- SEÇÃO: Detalhes do anúncio -->
                <h5 class="fw-bold mb-3">Detalhes do Anúncio</h5>

                <div class="row">
                    <!-- Título -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Titulo" class="form-label fw-semibold"></label>
                        <input asp-for="Titulo" class="form-control" placeholder="Ex: Carro impecável, como novo" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <!-- Preço -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Preco" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <input asp-for="Preco" type="number" step="0.01" class="form-control" placeholder="Ex: 15000" />
                            <span class="input-group-text">€</span>
                        </div>
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>
                </div>

                <!-- Descrição -->
                <div class="mb-4">
                    <label asp-for="Descricao" class="form-label fw-semibold"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="5"
                              placeholder="Adicione detalhes importantes, estado do veículo, extras, revisões…"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <hr class="my-4" />

                <!-- SEÇÃO: Localização -->
                <h5 class="fw-bold mb-3">Localização</h5>

                <div class="mb-3">
                    <label asp-for="IdLocalizacao" class="form-label fw-semibold"></label>
                    <select asp-for="IdLocalizacao" class="form-select" asp-items="ViewBag.IdLocalizacao">
                        <option value="">-- Escolha a localização --</option>
                    </select>
                    <span asp-validation-for="IdLocalizacao" class="text-danger"></span>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        Criar Anúncio
                    </button>
                </div>

            </form>

        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="text-decoration-none">← Voltar à lista</a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

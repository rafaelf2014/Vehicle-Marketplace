@model IEnumerable<CliCarProject.Models.Classes.Anuncio>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Gestão dos Meus Anúncios</h2>
        <a asp-action="Create" class="btn btn-danger rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Novo Anúncio
        </a>
    </div>

    @* --- SECÇÃO 1: DISPONÍVEIS --- *@
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center">
                <span class="badge bg-primary rounded-pill me-2">@ViewBag.TotalAtivos</span>
                <h4 class="mb-0 fw-bold text-primary">Disponíveis</h4>
            </div>

            @* Controlos Estilo Carrossel *@
            <div class="d-flex gap-2">
                <a id="prev-ativos" asp-action="GetAnunciosPaginados" asp-route-tipo="ativos" asp-route-pagina="0"
                   data-ajax="true" data-ajax-mode="replace" data-ajax-update="#listaAtivos"
                   class="btn btn-outline-primary btn-sm rounded-circle disabled">
                    <i class="bi bi-chevron-left"></i>
                </a>
                <a id="next-ativos" asp-action="GetAnunciosPaginados" asp-route-tipo="ativos" asp-route-pagina="2"
                   data-ajax="true" data-ajax-mode="replace" data-ajax-update="#listaAtivos"
                   class="btn btn-outline-primary btn-sm rounded-circle @(ViewBag.HasNextAtivos ? "" : "disabled")">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </div>
        </div>

        <form asp-action="DeleteSelected" method="post">
            @Html.AntiForgeryToken()
            <div id="listaAtivos" class="row row-cols-2 row-cols-md-4 row-cols-lg-5 row-cols-xl-6 g-3 transition-fade">
                <partial name="~/Views/Anuncios/PartialViews/_CardsPartial.cshtml" model="ViewBag.Ativos" />
            </div>

            <div class="mt-4">
                <button type="submit" id="btnDeleteSelected" class="btn btn-outline-danger rounded-pill px-4 shadow-sm" disabled>
                    <i class="bi bi-trash3 me-2"></i>Eliminar Selecionados
                </button>
            </div>
        </form>
    </section>

    @* --- SECÇÃO 2: PEDIDOS DE VISITA --- *@
    <section class="mb-5">
        <div class="d-flex align-items-center mb-3">
            <span class="badge bg-warning text-dark rounded-pill me-2">@(((List<CliCarProject.Models.Classes.Anuncio>)ViewBag.Pendentes).Count)</span>
            <h4 class="fw-bold text-warning mb-0">Pedidos de Visita Pendentes</h4>
        </div>
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in (List<CliCarProject.Models.Classes.Anuncio>)ViewBag.Pendentes)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden border-top border-4 border-warning">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">@item.Titulo</h6>
                            <form asp-action="ConfirmarReserva" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="idAnuncio" value="@item.IdAnuncio" />
                                <button type="submit" class="btn btn-success btn-sm w-100 rounded-pill mb-2 fw-bold">
                                    <i class="bi bi-check-lg"></i> Confirmar Reserva
                                </button>
                            </form>
                            <a asp-action="Details" asp-route-id="@item.IdAnuncio" class="btn btn-light btn-sm w-100 rounded-pill">Ver Pedido</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    @* --- SECÇÃO 3: RESERVADOS --- *@
    <section class="mb-5">
        <div class="d-flex align-items-center mb-3">
            <span class="badge bg-primary rounded-pill me-2">@(((List<CliCarProject.Models.Classes.Anuncio>)ViewBag.Reservados).Count)</span>
            <h4 class="fw-bold text-primary mb-0">Reservas Confirmadas</h4>
        </div>
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in (List<CliCarProject.Models.Classes.Anuncio>)ViewBag.Reservados)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden border-top border-4 border-success">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">@item.Titulo</h6>
                            <form asp-action="ConfirmarVenda" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.IdAnuncio" />
                                <button type="submit" class="btn btn-primary btn-sm w-100 rounded-pill fw-bold">
                                    <i class="bi bi-cash-stack"></i> Confirmar Venda
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    @* --- SECÇÃO 4: Vendidos --- *@
    <section class="mb-5">
        <div class="d-flex align-items-center mb-3">
            <span class="badge bg-success rounded-pill me-2">@(((List<CliCarProject.Models.Classes.Anuncio>)ViewBag.Vendidos).Count)</span>
            <h4 class="fw-bold text-success mb-0">Anúncios Vendidos</h4>
        </div>
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in (List<CliCarProject.Models.Classes.Anuncio>)ViewBag.Vendidos)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden position-relative">
                        <img src="@(item.IdVeiculoNavigation.Imagems.Any() ? Url.Content($"~/uploads/veiculos/{item.IdVeiculo}/{item.IdVeiculoNavigation.Imagems.First().Nome}") : "/images/no-image.png")"
                             class="card-img-top" style="height: 180px; object-fit: cover;">

                        <div class="card-body">
                            <h6 class="fw-bold mb-1">@item.Titulo</h6>
                            <p class="text-primary fw-bold mb-2">@item.Preco.ToString("N0") €</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

@section Scripts {
    <script>
                $(document).on('ajaxSuccess', function (event, xhr, settings) {
            const url = new URL(settings.url, window.location.origin);
            const tipo = url.searchParams.get('tipo');
            const paginaAtual = parseInt(url.searchParams.get('pagina'));

            // Lemos o cabeçalho enviado pelo Controller
            const temProxima = xhr.getResponseHeader("X-Has-Next") === "true";

            if (tipo) {
                const nextBtn = document.getElementById(`next-${tipo}`);
                const prevBtn = document.getElementById(`prev-${tipo}`);

                if (nextBtn) {
                    // Atualiza o link para a próxima página
                    const nextUrl = new URL(nextBtn.href, window.location.origin);
                    nextUrl.searchParams.set('pagina', paginaAtual + 1);
                    nextBtn.href = nextUrl.pathname + nextUrl.search;

                    // DESATIVAR se não houver próxima página
                    if (!temProxima) nextBtn.classList.add('disabled');
                    else nextBtn.classList.remove('disabled');
                }

                if (prevBtn) {
                    const prevUrl = new URL(prevBtn.href, window.location.origin);
                    prevUrl.searchParams.set('pagina', paginaAtual - 1);
                    prevBtn.href = prevUrl.pathname + prevUrl.search;

                    if (paginaAtual <= 1) prevBtn.classList.add('disabled');
                    else prevBtn.classList.remove('disabled');
                }
            }
            configurarCheckboxes();
        });

        // Função separada para as checkboxes funcionarem em elementos carregados por AJAX
        function configurarCheckboxes() {
            const checkboxes = document.querySelectorAll('input[name="ids"]');
            const deleteBtn = document.getElementById('btnDeleteSelected');

            if (deleteBtn) {
                checkboxes.forEach(cb => {
                    cb.addEventListener('change', () => {
                        const anyChecked = Array.from(checkboxes).some(c => c.checked);
                        deleteBtn.disabled = !anyChecked;
                    });
                });
            }
        }

        // Correr ao carregar a página pela primeira vez
        document.addEventListener('DOMContentLoaded', configurarCheckboxes);
    </script>
}
}
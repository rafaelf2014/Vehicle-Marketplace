@model IEnumerable<CliCarProject.Models.Classes.VisitaReserva>

@{
    ViewData["Title"] = "As Minhas Reservas";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-0">📅 Minhas Reservas & Visitas</h2>
            <p class="text-muted">Acompanhe os veículos que reservou e as suas visitas agendadas.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
            <i class="bi bi-search me-2"></i>Explorar mais
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 border rounded-4 bg-light shadow-sm">
            <i class="bi bi-calendar-x display-1 text-muted opacity-25"></i>
            <h3 class="mt-4 fw-bold text-secondary">Ainda não tem reservas</h3>
            <p class="text-muted">Quando reservar um veículo, ele aparecerá aqui com os detalhes da visita.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-4">
            <table class="table table-hover bg-white mb-0 align-middle">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4 py-3">Veículo</th>
                        <th>Data Agendada</th>
                        <th>Expira em</th>
                        <th>Estado</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reserva in Model)
                    {
                        var anuncio = reserva.IdAnuncioNavigation;
                        var veiculo = anuncio?.IdVeiculoNavigation;
                        var isExpirada = reserva.DataExpiracao < DateTime.Now && reserva.Estado == "Pendente";

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="fw-bold text-dark">
                                        @anuncio?.Titulo
                                        <small class="d-block text-muted fw-normal">@anuncio?.Preco.ToString("N0") €</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span><i class="bi bi-calendar-event me-2 text-primary"></i>@reserva.DataVisita?.ToString("dd/MM/yyyy")</span>
                                    <small class="text-muted">@reserva.DataVisita?.ToString("HH:mm")</small>
                                </div>
                            </td>
                            <td>
                                @if (reserva.Estado == "Pendente" && !isExpirada)
                                {
                                    <span class="text-danger fw-bold">
                                        <i class="bi bi-hourglass-split me-1"></i>
                                        @reserva.DataExpiracao?.ToString("dd/MM HH:mm")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">--</span>
                                }
                            </td>
                            <td>
                                @if (isExpirada || reserva.Estado == "Expirada")
                                {
                                    <span class="badge bg-secondary rounded-pill px-3">Expirada</span>
                                }
                                else if (reserva.Estado == "Pendente")
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3">Pendente</span>
                                }
                                else if (reserva.Estado == "Concluida")
                                {
                                    <span class="badge bg-success rounded-pill px-3">Venda Concluída</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark border rounded-pill px-3">@reserva.Estado</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@reserva.IdAnuncio" class="btn btn-sm btn-outline-dark rounded-pill px-3">
                                    Ver Anúncio
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .table-responsive {
        border: 1px solid #eee;
    }

    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
    }

    .badge {
        font-weight: 600;
        font-size: 0.75rem;
    }
</style>
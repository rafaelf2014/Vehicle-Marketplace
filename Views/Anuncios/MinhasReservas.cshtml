@model IEnumerable<CliCarProject.Models.Classes.VisitaReserva>

@{
    ViewData["Title"] = "As Minhas Reservas";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-0">📅 Minhas Reservas & Visitas</h2>
            <p class="text-muted">Acompanhe os veículos reservados, estados de pagamento e histórico. [cite: 64]</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
            <i class="bi bi-search me-2"></i>Explorar mais
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 border rounded-4 bg-light shadow-sm">
            <i class="bi bi-calendar-x display-1 text-muted opacity-25"></i>
            <h3 class="mt-4 fw-bold text-secondary">Ainda não tem reservas</h3>
            <p class="text-muted">Quando reservar um veículo, ele aparecerá aqui.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-4">
            <table class="table table-hover bg-white mb-0 align-middle">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4 py-3">Veículo</th>
                        <th>Estado Reserva</th>
                        <th>Estado Pagamento </th>
                        <th class="text-end pe-4">Ações Funcionais</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reserva in Model)
                    {
                        var anuncio = reserva.IdAnuncioNavigation;
                        var compra = anuncio?.Compra;
                        var isExpirada = reserva.Estado == "Confirmada" && reserva.DataExpiracao < DateTime.Now && compra == null;

                        
                        var podeFazerCheckout = anuncio?.Estado == "Reservado" && compra == null;

                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">
                                    @anuncio?.Titulo
                                    <small class="d-block text-primary">@anuncio?.Preco.ToString("N0") €</small>
                                </div>
                            </td>
                            <td>
                                @if (isExpirada || reserva.Estado == "Expirada")
                                {
                                    <span class="badge bg-secondary rounded-pill">Expirada</span>
                                }
                                else if (anuncio?.Estado == "Reservado" || reserva.Estado == "Confirmada")
                                {
                                    <span class="badge bg-info text-dark rounded-pill">Reserva Aceite</span>
                                }
                                else if (reserva.Estado == "Concluida")
                                {
                                    <span class="badge bg-success rounded-pill">Concluída</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark rounded-pill">@reserva.Estado</span>
                                }
                            </td>
                            <td>
                                @if (compra == null)
                                {
                                    <span class="text-muted small">Aguardar Checkout</span>
                                }
                                else
                                {
                                    var badgeClass = compra.Estado switch
                                    {
                                        "Pendente" => "bg-warning text-dark",
                                        "Pago" => "bg-success",
                                        "Cancelado" => "bg-danger",
                                        _ => "bg-light text-dark"
                                    };
                                    <span class="badge @badgeClass rounded-pill">Pagamento @compra.Estado </span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    @* 1. Lógica de Checkout baseada no estado do Anúncio *@
                                    @if (podeFazerCheckout)
                                    {
                                        <form asp-action="Checkout" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="idAnuncio" value="@reserva.IdAnuncio" />
                                            <a asp-action="DetalhesCheckout" asp-route-idAnuncio="@reserva.IdAnuncio" class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm">
                                                <i class="bi bi-cart-check me-1"></i> Checkout
                                            </a>
                                        </form>
                                    }

                                    @* 2. Lógica de Pagamento *@
                                    @if (compra != null && compra.Estado == "Pendente")
                                    {
                                        <form asp-action="PagarEncomenda" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="idCompra" value="@reserva.IdAnuncio" />
                                            <button type="submit" class="btn btn-sm btn-success rounded-pill px-3 shadow-sm">
                                                <i class="bi bi-credit-card me-1"></i> Pagar
                                            </button>
                                        </form>
                                    }

                                    <a asp-action="Details" asp-route-id="@reserva.IdAnuncio" class="btn btn-sm btn-outline-dark rounded-pill">
                                        Detalhes
                                    </a>

                                    @if ((reserva.Estado == "Pendente" || reserva.Estado == "Confirmada" ) && compra == null)
                                    {
                                        <form asp-action="CancelarReserva" asp-asp-controller="Anuncios" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="idAnuncio" value="@reserva.IdAnuncio" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                <i class="bi bi-x-circle me-1"></i> Cancelar Pedido
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .table-responsive {
        border: 1px solid #eee;
    }

    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
    }

    .badge {
        font-weight: 600;
        font-size: 0.75rem;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important;
    }
</style>
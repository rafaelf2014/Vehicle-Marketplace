@model IEnumerable<CliCarProject.Models.Classes.Anuncio>

@{
    ViewData["Title"] = "Os Meus Favoritos";
}

<div class="container py-5">
    <div class="mb-5">
        <h2 class="fw-bold mb-0">❤️ Os Meus Favoritos</h2>
        <p class="text-muted">Gira os veículos que despertaram o seu interesse.</p>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 border rounded-4 bg-light shadow-sm">
            <i class="bi bi-heart-break display-1 text-muted opacity-25"></i>
            <h3 class="mt-4 fw-bold text-secondary">A sua lista está vazia</h3>
            <p class="text-muted">Ainda não guardou nenhum veículo como favorito.</p>
            <a asp-controller="Car" asp-action="CarSearch" class="btn btn-primary rounded-pill px-4 mt-2 shadow">
                <i class="bi bi-search me-2"></i>Explorar Anúncios
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-4">
            @foreach (var anuncio in Model)
            {
				if (anuncio.IdVeiculoNavigation != null && anuncio.IdVeiculoNavigation.Disponivel == true)
				{
                    var veiculo = anuncio.IdVeiculoNavigation;
                    // Busca a imagem mais recente ou a primeira disponível
                    var capa = veiculo.Imagems?.OrderByDescending(i => i.IdImagem).FirstOrDefault();
                    var imagemUrl = capa != null
                    ? Url.Content($"~/uploads/veiculos/{veiculo.IdVeiculo}/{capa.Nome}")
                    : Url.Content("~/images/Image_not_available.png");

                    <div class="col animate-fade-in">
                        <div class="card h-100 border-0 shadow-sm premium-card rounded-4 overflow-hidden position-relative">

                            <div class="price-badge">
                                @anuncio.Preco.ToString("N0") €
                            </div>

                            <div class="card-img-wrapper">
                                <img src="@imagemUrl" class="card-img-top" alt="@anuncio.Titulo" />
                            </div>

                            <div class="card-body p-3">
                                <h6 class="fw-bold text-truncate mb-1">@anuncio.Titulo</h6>
                                <p class="small text-muted mb-3 d-flex align-items-center">
                                    <i class="bi bi-geo-alt me-1 text-primary"></i>
                                    @(anuncio.IdLocalizacaoNavigation?.Distrito ?? "Portugal")
                                </p>

                                <div class="row g-0 border-top pt-3">
                                    <div class="col-6 mb-2">
                                        <div class="d-flex align-items-center small">
                                            <i class="bi bi-calendar3 me-2 text-primary"></i>
                                            <span>@veiculo.Ano</span>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2 text-end">
                                        <div class="d-flex align-items-center justify-content-end small">
                                            <i class="bi bi-speedometer2 me-2 text-primary"></i>
                                            <span>@veiculo.Quilometragem?.ToString("N0")</span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-flex align-items-center small">
                                            <i class="bi bi-fuel-pump me-2 text-primary"></i>
                                            <span>@(veiculo.IdCombustivelNavigation?.Tipo ?? "N/D")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer bg-white border-0 p-3 pt-0">
                                <div class="d-grid gap-2">
                                    <a asp-action="Details" asp-route-id="@anuncio.IdAnuncio" class="btn btn-dark rounded-pill py-2 shadow-sm">
                                        Ver Detalhes <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
				}
                
            }
        </div>
    }
</div>

<style>
    .premium-card {
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.3s ease;
        background: #fff;
    }

        .premium-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.12) !important;
        }

    .card-img-wrapper {
        height: 180px;
        overflow: hidden;
    }

    .card-img-top {
        height: 100%;
        width: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .premium-card:hover .card-img-top {
        transform: scale(1.1);
    }

    .price-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background: rgba(13, 110, 253, 0.9);
        color: white;
        padding: 4px 12px;
        border-radius: 50px;
        font-weight: 700;
        z-index: 5;
        font-size: 0.9rem;
        backdrop-filter: blur(4px);
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    .animate-fade-in {
        animation: fadeIn 0.4s ease-out forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
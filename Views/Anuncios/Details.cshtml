@model CliCarProject.Models.Classes.Anuncio

@{
    ViewData["Title"] = Model.Titulo;
    var veiculo = Model.IdVeiculoNavigation;
    var imagens = veiculo.Imagems.OrderByDescending(i => i.IdImagem).ToList();

    // Recuperamos o estado do favorito da ViewBag (definido no Controller)
    bool isFavorito = ViewBag.IsFavorito ?? false;
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4 d-flex justify-content-between align-items-center">
        <a href="javascript:history.back()" class="text-decoration-none text-muted">
            <i class="bi bi-chevron-left"></i> Voltar à pesquisa
        </a>
        <small class="text-muted">Publicado em @Model.DataCriacao?.ToString("dd/MM/yyyy")</small>
    </nav>

    <div class="row g-4">
        <div class="col-lg-8">

            <div class="main-gallery shadow-sm rounded-4 overflow-hidden bg-white mb-4">
                @if (imagens.Any())
                {
                    <div id="carouselAnuncio" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < imagens.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Url.Content($"~/uploads/veiculos/{veiculo.IdVeiculo}/{imagens[i].Nome}")"
                                         class="d-block w-100" style="height: 500px; object-fit: cover;" />
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselAnuncio" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon shadow-sm rounded-circle"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselAnuncio" data-bs-slide="next">
                            <span class="carousel-control-next-icon shadow-sm rounded-circle"></span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center bg-light" style="height: 400px;">
                        <i class="bi bi-camera fs-1 text-muted"></i>
                    </div>
                }
            </div>

            <div class="bg-white p-4 rounded-4 shadow-sm mb-4">
                <h5 class="fw-bold mb-4">Características principais</h5>
                <div class="row g-3">
                    <div class="col-6 col-md-3">
                        <div class="spec-item p-3 border rounded-3 text-center h-100">
                            <i class="bi bi-calendar3 text-primary fs-4"></i>
                            <small class="text-muted d-block mt-2">Ano</small>
                            <span class="fw-bold">@veiculo.Ano</span>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="spec-item p-3 border rounded-3 text-center h-100">
                            <i class="bi bi-speedometer2 text-primary fs-4"></i>
                            <small class="text-muted d-block mt-2">Quilómetros</small>
                            <span class="fw-bold">@veiculo.Quilometragem?.ToString("N0") km</span>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="spec-item p-3 border rounded-3 text-center h-100">
                            <i class="bi bi-fuel-pump text-primary fs-4"></i>
                            <small class="text-muted d-block mt-2">Combustível</small>
                            <span class="fw-bold">@(veiculo.IdCombustivelNavigation?.Tipo ?? "N/D")</span>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="spec-item p-3 border rounded-3 text-center h-100">
                            <i class="bi bi-gear-wide-connected text-primary fs-4"></i>
                            <small class="text-muted d-block mt-2">Caixa</small>
                            <span class="fw-bold">@(veiculo.Caixa == "M" ? "Manual" : "Auto")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white p-4 rounded-4 shadow-sm">
                <h5 class="fw-bold mb-3">Descrição</h5>
                <p class="text-muted" style="line-height: 1.8; white-space: pre-line;">@Model.Descricao</p>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="sticky-top" style="top: 20px; z-index: 10;">

                <div class="bg-white p-4 rounded-4 shadow-sm border-top border-4 border-primary mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h1 class="h2 fw-bold mb-0 text-primary">@Model.Preco.ToString("N0") €</h1>

                        @if (User.Identity.Name != Model.IdVendedorNavigation?.UserName)
                        {
                            <button id="btnFavorito" data-id="@Model.IdAnuncio" class="btn btn-light rounded-circle shadow-sm border p-2">
                                <i id="iconFavorito" class="bi @(ViewBag.IsFavorito ? "bi-heart-fill text-danger" : "bi-heart") fs-4"></i>
                            </button>
                        }
                    </div>

                    <h4 class="fw-bold mb-1">@Model.Titulo</h4>
                    <p class="text-muted">@veiculo.IdMarcaNavigation?.Nome @veiculo.IdModeloNavigation?.Nome</p>

                    <hr>

                    <div class="d-grid gap-2">
                        @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.IdVendedorNavigation?.UserName)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.IdAnuncio" class="btn btn-warning btn-lg rounded-pill fw-bold">
                                <i class="bi bi-pencil me-2"></i> Editar Anúncio
                            </a>

                            <form asp-action="Delete" asp-route-id="@Model.IdAnuncio" method="post" onsubmit="return confirm('Tem a certeza que deseja eliminar este anúncio?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger w-100 rounded-pill">
                                    <i class="bi bi-trash me-2"></i> Eliminar Anúncio
                                </button>
                            </form>
                        }
                        else
                        {
                            <a href="mailto:@Model.IdVendedorNavigation?.Email?subject=Interesse no anúncio: @Model.Titulo"
                               class="btn btn-primary btn-lg rounded-pill fw-bold">
                                <i class="bi bi-chat-left-text me-2"></i> Contactar Vendedor
                            </a>

                            <button class="btn btn-outline-dark rounded-pill shadow-sm py-2">
                                <i class="bi bi-telephone me-2"></i> Ver Telefone
                            </button>
                        }
                    </div>
                </div>

                <div class="bg-dark text-white p-4 rounded-4 shadow-sm">
                    <h6 class="text-uppercase small fw-bold opacity-50 mb-3 text-white">
                        @(User.Identity.Name == Model.IdVendedorNavigation?.UserName ? "As minhas informações" : "Vendido por")
                    </h6>
                    <div class="d-flex align-items-center mb-3">
                    </div>
                        <div>
                            <h6 class="mb-0 fw-bold">@Model.IdVendedorNavigation?.UserName</h6>
                            <small class="opacity-75">Localização: @(Model.IdLocalizacaoNavigation?.Distrito ?? "Portugal")</small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between small opacity-75">
                        <span><i class="bi bi-eye me-1"></i> @Model.Visualizacoes visualizações</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .rounded-4 {
        border-radius: 1.2rem !important;
    }

    .spec-item {
        transition: transform 0.2s ease;
    }

        .spec-item:hover {
            transform: translateY(-5px);
            border-color: #0d6efd !important;
        }

    .btn-light:hover {
        background-color: #f1f1f1;
    }

    .sticky-top {
        top: 100px;
    }
    /* Ajusta se tiveres uma navbar fixa */
</style>

@section Scripts {
    <script>
        // Lógica AJAX para o botão de Favoritos
        document.getElementById('btnFavorito').addEventListener('click', function() {
            const anuncioId = this.getAttribute('data-id');
            const icon = document.getElementById('iconFavorito');

            fetch(`/Anuncios/ToggleFavorito?idAnuncio=${anuncioId}`, {
                method: 'POST',
                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.isFavorito) {
                        icon.classList.replace('bi-heart', 'bi-heart-fill');
                        icon.classList.add('text-danger');
                    } else {
                        icon.classList.replace('bi-heart-fill', 'bi-heart');
                        icon.classList.remove('text-danger');
                    }
                }
            })
            .catch(err => console.error("Erro ao processar favorito", err));
        });
    </script>
}
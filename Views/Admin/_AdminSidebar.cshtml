@{
    var active = (ViewData["AdminActive"] as string) ?? string.Empty;
}
<div class="card shadow-sm rounded-4">
    <div class="card-body p-3">
        <h5 class="fw-bold text-danger mb-3">Painel de Controlo</h5>

        <div class="list-group mb-3">
            <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center @(active == "Dashboard" ? "active" : "")">
                <i class="bi bi-speedometer2 me-3 fs-5 text-primary"></i>
                <span>Dashboard</span>
            </a>

            <a asp-controller="Admin" asp-action="UserManage" class="list-group-item list-group-item-action d-flex align-items-center @(active == "Users" ? "active" : "")">
                <i class="bi bi-people me-3 fs-5 text-primary"></i>
                <span>Users</span>
            </a>

            <a asp-controller="Admin" asp-action="Veiculos" class="list-group-item list-group-item-action d-flex align-items-center @(active == "Veiculos" ? "active" : "")">
                <i class="bi bi-car-front me-3 fs-5 text-primary"></i>
                <span>Viaturas</span>
            </a>

            <a asp-controller="Admin" asp-action="Anuncios" class="list-group-item list-group-item-action d-flex align-items-center @(active == "Anuncios" ? "active" : "")">
                <i class="bi bi-card-list me-3 fs-5 text-primary"></i>
                <span>Anúncios</span>
            </a>

            <a asp-controller="Admin" asp-action="HistoricoAcoes" class="list-group-item list-group-item-action d-flex align-items-center @(active == "Historico" ? "active" : "")">
                <i class="bi bi-journal-text me-3 fs-5 text-primary"></i>
                <span>Histórico ações</span>
            </a>
        </div>

        <button type="button"
                class="btn btn-sm btn-outline-danger w-100 rounded-pill"
                data-bs-toggle="modal"
                data-bs-target="#modalCreateAdminUser">
            <i class="bi bi-person-plus-fill me-1"></i> Adicionar conta admin
        </button>
    </div>
</div>

<!-- Modal: Criar conta admin -->
<div class="modal fade" id="modalCreateAdminUser" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-person-plus-fill me-2 text-danger"></i> Adicionar conta admin
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <form asp-controller="Admin" asp-action="CreateAdminUser" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label small fw-semibold">Username</label>
                        <input type="text" name="UserName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-semibold">Email</label>
                        <input type="email" name="Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-semibold">Password</label>
                        <input type="password" name="Password" class="form-control" required />
                    </div>
                    <div class="mb-0">
                        <label class="form-label small fw-semibold">Confirmar Password</label>
                        <input type="password" name="ConfirmPassword" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger rounded-pill px-4">Criar admin</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .list-group-item.active i { color: #fff !important; opacity: 0.95; }
</style>
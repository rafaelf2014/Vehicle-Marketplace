@model CliCarProject.Models.AdminAnnouncementsViewModel
@{
    ViewData["Title"] = "Anúncios – Gestão";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row g-4">
        <aside class="col-12 col-md-4 col-lg-3">
            @{
                await Html.RenderPartialAsync("~/Views/Admin/_AdminSidebar.cshtml");
            }
        </aside>

        <main class="col-12 col-md-8 col-lg-9">
            <div class="card shadow-sm rounded-4 p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h2 class="fw-bold mb-1">Anúncios</h2>
                        <p class="text-muted mb-0">Total de anúncios registados e listagem completa.</p>
                    </div>

                    <div class="text-end">
                        <span class="badge bg-primary rounded-pill fs-6">Total: @Model.TotalAnuncios</span>
                    </div>
                </div>

                <!-- Barra de Pesquisa -->
                <div class="card mt-3 mb-3 border-0 bg-light">
                    <div class="card-body p-3">
                        <form method="get" asp-action="Anuncios" class="row g-2 align-items-center">
                            <div class="col-auto flex-grow-1">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" 
                                           name="searchTerm" 
                                           value="@ViewBag.SearchTerm" 
                                           class="form-control border-start-0 ps-0" 
                                           placeholder="Pesquisar por ID ou username do criador..." 
                                           aria-label="Pesquisar">
                                </div>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-1"></i> Pesquisar
                                </button>
                            </div>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                            {
                                <div class="col-auto">
                                    <a href="@Url.Action("Anuncios")" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i> Limpar
                                    </a>
                                </div>
                            }
                        </form>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body p-3">
                        <h6 class="mb-3">Lista de anúncios</h6>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width:1%; cursor: pointer;" onclick="sortTable('id', '@ViewBag.IdSortOrder')">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <span>ID</span>
                                                @if (ViewBag.CurrentSort == "id")
                                                {
                                                    <i class="bi bi-arrow-@(ViewBag.CurrentOrder == "asc" ? "up" : "down") ms-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                                }
                                            </div>
                                        </th>
                                        <th style="cursor: pointer;" onclick="sortTable('username', '@ViewBag.UsernameSortOrder')">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <span>Criador</span>
                                                @if (ViewBag.CurrentSort == "username")
                                                {
                                                    <i class="bi bi-arrow-@(ViewBag.CurrentOrder == "asc" ? "up" : "down") ms-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                                }
                                            </div>
                                        </th>
                                        <th>Estado</th>
                                        <th>Data criação</th>
                                        <th style="width:1%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Announcements != null && Model.Announcements.Any())
                                    {
                                        foreach (var a in Model.Announcements)
                                        {
                                            <tr>
                                                <td class="text-truncate" style="max-width:120px;">@a.IdAnuncio</td>
                                                <td>@(string.IsNullOrEmpty(a.Criador) ? "-" : a.Criador)</td>
                                                <td>@(string.IsNullOrEmpty(a.Estado) ? "-" : a.Estado)</td>
                                                <td>@(a.DataCriacao.HasValue ? a.DataCriacao.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                                                <td>
                                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Anuncios" asp-action="Details" asp-route-id="@a.IdAnuncio">Ver</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted py-4">Nenhum anúncio encontrado.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .rounded-4 { border-radius: 1.0rem !important; }
    .list-group-item i { width: 1.25rem; text-align: center; }
    thead th { user-select: none; }
    thead th:hover { background-color: #e9ecef !important; }
</style>

@section Scripts {
<script>
    function sortTable(column, order) {
        const searchTerm = '@ViewBag.SearchTerm' || '';
        const url = new URL(window.location.href);
        url.searchParams.set('sortBy', column);
        url.searchParams.set('sortOrder', order);
        if (searchTerm) {
            url.searchParams.set('searchTerm', searchTerm);
        }
        window.location.href = url.toString();
    }
</script>
}
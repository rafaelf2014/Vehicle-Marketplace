@model CliCarProject.Models.AdminVehiclesViewModel
@{
    ViewData["Title"] = "Viaturas — Gestão";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row g-4">
        <aside class="col-12 col-md-4 col-lg-3">
            @{
                await Html.RenderPartialAsync("~/Views/Admin/_AdminSidebar.cshtml");
            }
        </aside>

        <main class="col-12 col-md-8 col-lg-9">
            <div class="card shadow-sm rounded-4 p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h2 class="fw-bold mb-1">Viaturas</h2>
                        <p class="text-muted mb-0">Total de viaturas registadas e listagem completa.</p>
                    </div>

                    <div class="text-end">
                        <span class="badge bg-primary rounded-pill fs-6">Total: @Model.TotalVeiculos</span>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body p-3">
                        <h6 class="mb-3">Lista de viaturas</h6>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width:1%">ID</th>
                                        <th>Marca</th>
                                        <th>Modelo</th>
                                        <th>Ano</th>
                                        <th>Utilizador</th>
                                        <th style="width:1%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Vehicles != null && Model.Vehicles.Any())
                                    {
                                        foreach (var v in Model.Vehicles)
                                        {
                                            <tr>
                                                <td class="text-truncate" style="max-width:120px;">@v.IdVeiculo</td>
                                                <td>@v.Marca</td>
                                                <td>@v.Modelo</td>
                                                <td>@(v.Ano?.ToString() ?? "-")</td>
                                                <td>@(string.IsNullOrEmpty(v.Proprietario) ? "-" : v.Proprietario)</td>
                                                <td>
                                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Veiculos" asp-action="Details" asp-route-id="@v.IdVeiculo">Ver</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted py-4">Nenhuma viatura encontrada.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .rounded-4 { border-radius: 1.0rem !important; }
    .list-group-item i { width: 1.25rem; text-align: center; }
</style>
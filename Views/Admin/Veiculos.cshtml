@model CliCarProject.Models.AdminVehiclesViewModel
@{
    ViewData["Title"] = "Viaturas – Gestão";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row g-4">
        <aside class="col-12 col-md-4 col-lg-3">
            @{
                await Html.RenderPartialAsync("~/Views/Admin/_AdminSidebar.cshtml");
            }
        </aside>

        <main class="col-12 col-md-8 col-lg-9">
            <div class="card shadow-sm rounded-4 p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h2 class="fw-bold mb-1">Viaturas</h2>
                        <p class="text-muted mb-0">Total de viaturas registadas e listagem completa.</p>
                    </div>

                    <div class="d-flex align-items-center border rounded-3 p-3">
                        <div class="me-3">
                            <i class="bi bi-car-front-fill fs-3 text-primary"></i>
                        </div>
                        <div class="text-end">
                            <div class="small text-muted">Viaturas</div>
                            <div class="h5 mb-0">@Model.TotalVeiculos</div>
                        </div>
                    </div>
                </div>

                <!-- Barra de Pesquisa -->
                <div class="card mt-3 mb-3 border-0 bg-light">
                    <div class="card-body p-3">
                        <form method="get" asp-action="Veiculos" class="row g-2 align-items-center">
                            <div class="col-auto flex-grow-1">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" 
                                           name="searchTerm" 
                                           value="@ViewBag.SearchTerm" 
                                           class="form-control border-start-0 ps-0" 
                                           placeholder="Pesquisar por ID ou username do proprietário..." 
                                           aria-label="Pesquisar">
                                </div>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-1"></i> Pesquisar
                                </button>
                            </div>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                            {
                                <div class="col-auto">
                                    <a href="@Url.Action("Veiculos")" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i> Limpar
                                    </a>
                                </div>
                            }
                        </form>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body p-3">
                        <h6 class="mb-3">Lista de viaturas</h6>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width:1%; cursor: pointer;" onclick="sortTable('id', '@ViewBag.IdSortOrder')">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <span>ID</span>
                                                @if (ViewBag.CurrentSort == "id")
                                                {
                                                    <i class="bi bi-arrow-@(ViewBag.CurrentOrder == "asc" ? "up" : "down") ms-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                                }
                                            </div>
                                        </th>
                                        <th>Marca</th>
                                        <th>Modelo</th>
                                        <th style="cursor: pointer;" onclick="sortTable('ano', '@ViewBag.AnoSortOrder')">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <span>Ano</span>
                                                @if (ViewBag.CurrentSort == "ano")
                                                {
                                                    <i class="bi bi-arrow-@(ViewBag.CurrentOrder == "asc" ? "up" : "down") ms-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                                }
                                            </div>
                                        </th>
                                        <th style="cursor: pointer;" onclick="sortTable('username', '@ViewBag.UsernameSortOrder')">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <span>Utilizador</span>
                                                @if (ViewBag.CurrentSort == "username")
                                                {
                                                    <i class="bi bi-arrow-@(ViewBag.CurrentOrder == "asc" ? "up" : "down") ms-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                                }
                                            </div>
                                        </th>
                                        <th>Disponibilidade</th>
                                        <th style="width:1%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Vehicles != null && Model.Vehicles.Any())
                                    {
                                        foreach (var v in Model.Vehicles)
                                        {
                                            <tr>
                                                <td class="text-truncate" style="max-width:120px;">@v.IdVeiculo</td>
                                                <td>@v.Marca</td>
                                                <td>@v.Modelo</td>
                                                <td>@(v.Ano?.ToString() ?? "-")</td>
                                                <td>@(string.IsNullOrEmpty(v.Proprietario) ? "-" : v.Proprietario)</td>
                                                <td>
                                                    @if (v.Disponivel)
                                                    {
                                                        <span class="badge bg-success-subtle text-success border border-success-subtle">Disponível</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle">Indisponível</span>
                                                    }
                                                </td>
                                                <td class="text-nowrap">
                                                    <a class="btn btn-sm btn-outline-secondary me-1"
                                                       asp-controller="Veiculos"
                                                       asp-action="Details"
                                                       asp-route-id="@v.IdVeiculo">
                                                        Ver
                                                    </a>
                                                    <button type="button"
                                                            class="btn btn-sm btn-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#modalDeleteVeiculo"
                                                            data-veiculo-id="@v.IdVeiculo"
                                                            data-veiculo-label="@($"{v.Marca} {v.Modelo} ({v.Ano?.ToString() ?? "-"})")">
                                                        Remover
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center text-muted py-4">Nenhuma viatura encontrada.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Modal Remover Viatura -->
<div class="modal fade" id="modalDeleteVeiculo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-trash-fill me-2 text-danger"></i> Remover viatura
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <form asp-controller="Admin" asp-action="DeleteVeiculo" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="deleteVeiculoId" name="id" />
                <div class="modal-body">
                    <p class="mb-0">
                        Tem a certeza que pretende remover a viatura
                        <strong id="deleteVeiculoLabel"></strong>?
                    </p>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger rounded-pill px-4">Remover</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .rounded-4 { border-radius: 1.0rem !important; }
    .list-group-item i { width: 1.25rem; text-align: center; }
    thead th { user-select: none; }
    thead th:hover { background-color: #e9ecef !important; }
</style>

@section Scripts {
<script>
    function sortTable(column, order) {
        const searchTerm = '@ViewBag.SearchTerm' || '';
        const url = new URL(window.location.href);
        url.searchParams.set('sortBy', column);
        url.searchParams.set('sortOrder', order);
        if (searchTerm) {
            url.searchParams.set('searchTerm', searchTerm);
        }
        window.location.href = url.toString();
    }

    document.addEventListener('DOMContentLoaded', function () {
        var modal = document.getElementById('modalDeleteVeiculo');
        if (!modal) return;

        modal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            if (!button) return;

            var id = button.getAttribute('data-veiculo-id');
            var label = button.getAttribute('data-veiculo-label');

            document.getElementById('deleteVeiculoId').value = id;
            document.getElementById('deleteVeiculoLabel').textContent = label || id;
        });
    });
</script>
}
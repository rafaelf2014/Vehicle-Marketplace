@model CliCarProject.Models.AdminHistoricoViewModel
@{
    ViewData["Title"] = "Histórico de Ações";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row g-4">
        <aside class="col-12 col-md-4 col-lg-3">
            @{
                await Html.RenderPartialAsync("~/Views/Admin/_AdminSidebar.cshtml");
            }
        </aside>

        <main class="col-12 col-md-8 col-lg-9">
            <div class="card shadow-sm rounded-4 p-4">
                <h2 class="fw-bold mb-2">Histórico de ações</h2>
                <p class="text-muted mb-3">
                    Registo das operações realizadas pelos utilizadores (criação de conta, anúncios, reservas, pagamentos, alterações de dados, bloqueios, etc.).
                </p>

                <!-- Barra de Pesquisa -->
                <div class="card mt-1 mb-3 border-0 bg-light">
                    <div class="card-body p-3">
                        <form method="get" asp-action="Historico" class="row g-2 align-items-center">
                            <div class="col-auto flex-grow-1">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text"
                                           name="searchTerm"
                                           value="@ViewBag.SearchTerm"
                                           class="form-control border-start-0 ps-0"
                                           placeholder="Pesquisar por ID, username ou ação..."
                                           aria-label="Pesquisar">
                                </div>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-1"></i> Pesquisar
                                </button>
                            </div>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                            {
                                <div class="col-auto">
                                    <a href="@Url.Action("Historico")" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i> Limpar
                                    </a>
                                </div>
                            }
                        </form>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body p-3">
                        <h6 class="mb-3">Registos</h6>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width:1%; cursor:pointer;" onclick="sortTable('id', '@ViewBag.IdSortOrder')">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <span>ID</span>
                                                @if (ViewBag.CurrentSort == "id")
                                                {
                                                    <i class="bi bi-arrow-@(ViewBag.CurrentOrder == "asc" ? "up" : "down") ms-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                                }
                                            </div>
                                        </th>
                                        <th style="cursor:pointer;" onclick="sortTable('user', '@ViewBag.UserSortOrder')">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <span>Username</span>
                                                @if (ViewBag.CurrentSort == "user")
                                                {
                                                    <i class="bi bi-arrow-@(ViewBag.CurrentOrder == "asc" ? "up" : "down") ms-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                                }
                                            </div>
                                        </th>
                                        <th>Ação</th>
                                        <th style="cursor:pointer;" onclick="sortTable('data', '@ViewBag.DataSortOrder')" class="text-end">
                                            <div class="d-flex align-items-center justify-content-end">
                                                <span>Data / Hora</span>
                                                @if (ViewBag.CurrentSort == "data")
                                                {
                                                    <i class="bi bi-arrow-@(ViewBag.CurrentOrder == "asc" ? "up" : "down") ms-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                                }
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Itens != null && Model.Itens.Any())
                                    {
                                        foreach (var h in Model.Itens)
                                        {
                                            <tr>
                                                <td class="text-truncate" style="max-width:80px;">@h.IdHistorico</td>
                                                <td class="text-truncate" style="max-width:200px;">
                                                    @(!string.IsNullOrEmpty(h.UserName) ? h.UserName : h.UserId)
                                                </td>
                                                <td>@h.Acao</td>
                                                <td class="text-end">@h.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-4">
                                                Nenhuma ação registada para os filtros atuais.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .rounded-4 { border-radius: 1.0rem !important; }
    .list-group-item i { width: 1.25rem; text-align: center; }
    thead th { user-select: none; }
    thead th:hover { background-color: #e9ecef !important; }
</style>

@section Scripts {
<script>
    function sortTable(column, order) {
        const searchTerm = '@(ViewBag.SearchTerm as string ?? string.Empty)';
        const url = new URL(window.location.href);
        url.searchParams.set('sortBy', column);
        url.searchParams.set('sortOrder', order);
        if (searchTerm) {
            url.searchParams.set('searchTerm', searchTerm);
        }
        window.location.href = url.toString();
    }
</script>
}
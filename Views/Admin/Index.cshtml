@{
    ViewData["Title"] = "Painel de Controlo";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row g-4">
        <aside class="col-12 col-md-4 col-lg-3">
            <div class="card shadow-sm rounded-4">
                <div class="card-body p-3">
                    <h5 class="fw-bold text-danger mb-3">Painel de Controlo</h5>

                    <div class="list-group">
                        <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-speedometer2 me-3 fs-5 text-primary"></i>
                            <span>Dashboard</span>
                        </a>

                        <a asp-controller="User" asp-action="UserProfile" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-people me-3 fs-5 text-primary"></i>
                            <span>Users</span>
                        </a>

                        <a asp-controller="Veiculos" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-car-front me-3 fs-5 text-primary"></i>
                            <span>Viaturas</span>
                        </a>

                        <a asp-controller="Anuncios" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-card-list me-3 fs-5 text-primary"></i>
                            <span>Carros</span>
                        </a>

                        <a asp-controller="Admin" asp-action="Historico" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-journal-text me-3 fs-5 text-primary"></i>
                            <span>Histórico ações</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="mt-3 text-muted small">
                <p class="mb-1">Atalhos úteis</p>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary btn-sm" asp-controller="Veiculos" asp-action="Index">Gerir Viaturas</a>
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Anuncios" asp-action="Index">Gerir Anúncios</a>
                </div>
            </div>
        </aside>

        <main class="col-12 col-md-8 col-lg-9">
            <div class="card shadow-sm rounded-4 p-4">
                <h2 class="fw-bold mb-2">Visão Geral</h2>
                <p class="text-muted mb-4">Bem‑vindo ao painel administrativo. Use a barra lateral para navegar entre as secções.</p>

                <div class="row g-3">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="border rounded-3 p-3 h-100">
                            <h6 class="mb-1">Utilizadores</h6>
                            <p class="small text-muted mb-0">Gerir contas, permissões e perfis.</p>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="border rounded-3 p-3 h-100">
                            <h6 class="mb-1">Viaturas</h6>
                            <p class="small text-muted mb-0">Lista de viaturas registadas.</p>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="border rounded-3 p-3 h-100">
                            <h6 class="mb-1">Anúncios</h6>
                            <p class="small text-muted mb-0">Ver e gerir anúncios publicados.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    /* Pequeno ajuste para a sidebar e o cartão principal */
    .list-group-item i { width: 1.25rem; text-align: center; }
    .rounded-4 { border-radius: 1.0rem !important; }
</style>
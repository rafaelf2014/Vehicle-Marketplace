@using CliCarProject.Models.Classes
@using Microsoft.AspNetCore.Mvc.Rendering

@model IEnumerable<CliCarProject.Models.Classes.Anuncio>

@{
    ViewData["Title"] = "Home";
    var marcas = ViewBag.Marcas as List<Marca> ?? new List<Marca>();
    var modelos = ViewBag.Modelos as List<Modelo> ?? new List<Modelo>();
    var classes = ViewBag.Classes as List<Classe> ?? new List<Classe>();
    var combustiveis = ViewBag.Combustiveis as List<Combustivel> ?? new List<Combustivel>();
    var caixas = ViewBag.Caixas as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="hero-section">
    <div class="hero-image">
        <img src="@Url.Content("~/images/TemporaryImageHomePage.jpg")" alt="Car Hero" class="hero-img" />
    </div>

    <div class="hero-content">
        <h1 class="hero-title">ClicCar</h1>
        <p class="hero-subtitle">Encontra o carro perfeito para ti.</p>

        <div class="search-box">
            <form method="get" asp-controller="Car" asp-action="CarSearch" id="searchForm" class="d-flex gap-2 align-items-center flex-wrap">
                <input name="searchBox" class="form-control" placeholder="Procurar..."/>

                <select class="form-select" name="marcaId" id="marcaId">
                    <option value="">Marca</option>
                    @foreach (var m in marcas) { <option value="@m.IdMarca">@m.Nome</option> }
                </select>

                <select class="form-select" name="modeloId" id="modeloId" disabled>
                    <option value="">Modelo</option>
                    @foreach (var mo in modelos) { <option value="@mo.IdModelo">@mo.Nome</option> }
                </select>

                <select class="form-select" name="categoriaId">
                    <option value="">Categoria</option>
                    @foreach (var c in classes) { <option value="@c.IdClasse">@c.Nome</option> }
                </select>

                <select class="form-select" name="combustivelId">
                    <option value="">Combustível</option>
                    @foreach (var cb in combustiveis) { <option value="@cb.IdCombustivel">@cb.Tipo</option> }
                </select>

                <select class="form-select" name="caixa">
                    <option value="">Caixa</option>
                    <option value="M">Manual</option>
                    <option value="A">Automática</option>
                </select>

                <button type="submit" class="btn btn-danger">Pesquisar</button>
            </form>
        </div>
    </div>
</div>

<!-- Secção Destaques -->
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0 fw-bold">🔥 Destaques</h2>
        <a asp-controller="Car" asp-action="CarSearch" class="btn-more">
            Mais <i class="bi bi-arrow-right-short"></i>
        </a>
    </div>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var anuncio in Model)
        {
            var veiculo = anuncio.IdVeiculoNavigation;

            // Imagem de capa
            var capa = veiculo.Imagems
            .OrderByDescending(i => i.IdImagem)
            .FirstOrDefault();

            string imagemUrl;

            if (capa != null)
            {
                imagemUrl = Url.Content($"~/uploads/veiculos/{veiculo.IdVeiculo}/{capa.Nome}");
            }
            else
            {
                imagemUrl = Url.Content("~/images/Image_not_available.png");
            }

            <div class="col">
                <div class="card h-100 border-primary shadow">
                    <span class="position-absolute top-0 end-0 m-2 badge rounded-pill bg-fire text-white"
                          style="background-color: #ff4500; z-index: 10;">
                        <i class="bi bi-graph-up"></i> Popular
                    </span>

                    <img src="@imagemUrl"
                         class="card-img-top"
                         style="height: 190px; object-fit: cover;" />

                    <div class="card-body">

                        <!-- TÍTULO -->
                        <h5 class="fw-bold">@anuncio.Titulo</h5>

                        <!-- MARCA + MODELO -->
                        <p class="mb-1 text-muted">
                            🚗 @veiculo.IdMarcaNavigation.Nome @veiculo.IdModeloNavigation.Nome
                        </p>

                        <!-- ANO + COMUSTÍVEL -->
                        <p class="mb-1">
                            📅 @veiculo.Ano • ⛽ @veiculo.IdCombustivelNavigation.Tipo
                        </p>

                        <!-- QUILÓMETROS -->
                        <p class="mb-1">
                            🛣️ @veiculo.Quilometragem?.ToString("N0") km
                        </p>

                        <!-- PREÇO -->
                        <h4 class="fw-bold text-danger mt-3">
                            @anuncio.Preco.ToString("N0") €
                        </h4>

                        <!-- BOTÃO -->
                        <div class="card-footer bg-white border-0">
                            <a asp-controller="Anuncios" asp-action="Details" asp-route-id="@anuncio.IdAnuncio"
                               class="btn btn-primary w-100 mt-3">
                                Ver Anúncio
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Secção Favoritos -->
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0 fw-bold">❤️ Favoritos</h2>
        <a asp-controller="Anuncios" asp-action="Favoritos" class="btn-more">
            Mais <i class="bi bi-arrow-right-short"></i>
        </a>
    </div>

    <p class="text-muted">Ainda não tens favoritos.</p>
</div>

@section Scripts {
    <script>
        (function () {
            const marcaSelect = document.getElementById('marcaId');
            const modeloSelect = document.getElementById('modeloId');

            function setModelos(list) {
                modeloSelect.innerHTML = '<option value="">Modelo</option>';
                list.forEach(m => {
                    const id = m.idModelo ?? m.IdModelo;
                    const nome = m.nome ?? m.Nome;
                    const opt = document.createElement('option');
                    opt.value = id;
                    opt.textContent = nome;
                    modeloSelect.appendChild(opt);
                });
                modeloSelect.disabled = list.length === 0;
            }

            marcaSelect.addEventListener('change', function () {
                const marcaId = this.value;
                if (!marcaId) {
                    // sem marca => desactiva modelo e limpa opções
                    modeloSelect.innerHTML = '<option value="">Modelo</option>';
                    modeloSelect.disabled = true;
                    return;
                }

                // fetch modelos da API
                fetch(`/Car/GetModelos?marcaId=${encodeURIComponent(marcaId)}`)
                    .then(r => r.json())
                    .then(data => {
                        setModelos(data || []);
                    })
                    .catch(() => {
                        modeloSelect.innerHTML = '<option value="">Modelo</option>';
                        modeloSelect.disabled = true;
                    });
            });

            // Ao carregar a página, se houver uma marca já selecionada (ex.: após submit),
            // disparar a mudança para popular modelos.
            document.addEventListener('DOMContentLoaded', function () {
                if (marcaSelect.value) {
                    // força disparo de change para popular modelos
                    marcaSelect.dispatchEvent(new Event('change'));
                }
            });
        })();
    </script>

    <style>
        /* Estilo para o link "Mais" */
        .btn-more {
            color: #0d6efd;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            padding: 5px 15px;
            border-radius: 20px;
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }

            .btn-more:hover {
                background-color: #f0f7ff;
                border-color: #0d6efd;
                color: #0a58ca;
                transform: translateX(5px); /* Pequeno efeito de movimento */
            }

        /* Badge de Popularidade Personalizada */
        .bg-fire {
            background: linear-gradient(45deg, #ff4500, #ff8c00);
            box-shadow: 0 2px 5px rgba(255, 69, 0, 0.3);
        }</style>
}
